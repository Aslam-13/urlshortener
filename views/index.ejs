<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <title>URL Shortner</title>
  <style>
    body{
      background-color: rgb(209, 202, 202);
     } 
  </style>
</head>
<body>
  <div class="container my-5">

    <h1>URL Shortner </h1>
    <form name="name" id="name" action="/shortUrls" method="POST" class="my-4 form-inline">
      <label for="name" id ="name" class="sr-only">URL: </label>
      <input type="url" name="name" id="name" required placeholder="Enter url" class="form-control col mr-3 my-3">
      <button class="btn btn-success btn1">Submit</button> 
     </form>
     <table class="table table-striped table-responsive">
       <thead>
         <tr>
           <th>Long Url</th>
           <th>Short Url</th>
           <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl => {%>  
          <tr>
            <td><a href="<%= shortUrl.full %>"><%= shortUrl.full%></a></td>
            <td ><a href="<%=shortUrl.short%>" class="link"> <%=shortUrl.short%></a>  </td>
             <td><%=shortUrl.clicks%></td> 
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <script src="index.js"></script>
  </body>
</html>